<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/Blue"
    android:orientation="vertical"
    tools:context="dalsgaard.ronnie.migrainmonitor.OccurrenceDetailActivityFragment">

    <TextView
        android:id="@+id/fragment_occurrence_detail_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:text="Text"
        android:textColor="@color/WhiteSmoke"
        android:textSize="24dp" />

    <ImageButton
        android:id="@+id/fragment_occurrence_detail_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_alignEnd="@+id/fragment_occurrence_detail_plus_btn"
        android:layout_margin="3dp"
        android:background="@color/Transparent"
        android:padding="15dp"
        android:src="@drawable/ic_delete_white_24dp" />


    <ImageButton
        android:id="@+id/fragment_occurrence_detail_minus_btn"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_below="@id/fragment_occurrence_detail_delete_btn"
        android:layout_margin="3dp"
        android:background="@color/DarkBlue"
        android:src="@drawable/ic_exposure_neg_1_white_24dp" />

    <TextView
        android:id="@+id/fragment_occurrence_detail_count_tv"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_below="@id/fragment_occurrence_detail_delete_btn"
        android:layout_toEndOf="@+id/fragment_occurrence_detail_minus_btn"
        android:gravity="center"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/WhiteSmoke"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/fragment_occurrence_detail_plus_btn"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_below="@id/fragment_occurrence_detail_delete_btn"
        android:layout_margin="3dp"
        android:layout_toEndOf="@+id/fragment_occurrence_detail_count_tv"
        android:background="@color/DarkBlue"
        android:src="@drawable/ic_exposure_plus_1_white_24dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_below="@+id/fragment_occurrence_detail_plus_btn"
        android:layout_alignStart="@+id/fragment_occurrence_detail_minus_btn"
        android:layout_alignEnd="@+id/fragment_occurrence_detail_plus_btn"
        android:background="@color/DarkBlue"
        android:layout_marginBottom="3dp"
        android:text="Save"
        android:textColor="@color/WhiteSmoke" />

</RelativeLayout>
