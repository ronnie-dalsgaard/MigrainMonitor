<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_occurrence_detail_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blue"
    android:orientation="vertical"
    tools:context="dalsgaard.ronnie.migrainmonitor.OccurrenceDetailActivityFragment">

    <LinearLayout
        android:id="@+id/fragment_occurrence_detail_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_occurrence_detail_name_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="10dp"
            android:gravity="bottom|center_horizontal"
            android:text="Text"
            android:textColor="@color/WhiteSmoke"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/fragment_occurrence_detail_time_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="Text"
            android:textColor="@color/WhiteSmoke"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/DarkBlue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/fragment_occurrence_detail_delete_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="@string/delete"
            android:textColor="@color/WhiteSmoke"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/fragment_occurrence_detail_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="3dp"
            android:background="@color/Transparent"
            android:padding="16dp"
            android:src="@drawable/ic_delete_white_24dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/DarkBlue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/fragment_occurrence_detail_minus_btn"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:background="@color/DarkBlue"
            android:src="@drawable/ic_exposure_neg_1_white_24dp" />

        <TextView
            android:id="@+id/fragment_occurrence_detail_count_tv"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/hello_blank_fragment"
            android:textColor="@color/WhiteSmoke"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/fragment_occurrence_detail_plus_btn"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:background="@color/DarkBlue"
            android:src="@drawable/ic_exposure_plus_1_white_24dp" />
    </LinearLayout>

    <Button
        android:id="@+id/fragment_occurrence_detail_save_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:background="@color/DarkBlue"
        android:text="Save"
        android:textColor="@color/WhiteSmoke"
        android:textSize="24dp" />

</LinearLayout>
