<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_history_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_history_name_tv"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="14sp"
        android:textColor="@color/WhiteSmoke"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/list_item_history_time_tv"
        android:layout_width="match_parent"
        android:layout_below="@+id/list_item_history_name_tv"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="12sp"
        android:textColor="@color/WhiteSmoke"
        android:layout_height="20dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:paddingTop="28dp"
        android:paddingBottom="28dp"
        android:paddingStart="28dp"
        android:paddingEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:src="@drawable/ic_more_vert_white_24dp"
        android:background="@color/Transparent"
        android:id="@+id/list_item_history_more_btn" />

</RelativeLayout>
